<!DOCTYPE html>
<html>
<!-- ヘッダー -->
<%= render 'root/header', books: @books %>
<!-- ここまで -->
<%= render 'books/sidebar', books: @books %>

<div class="col-lg-8">
<table class="table table-striped">
<thead>
<tr>
<th>Title</th>
<th>Opinion</th>
<th></th>
</tr>
</thead>

<tbody>
 <% @books.each do |book| %>
 <tr>
  <td>
   <%= link_to book.title, book_path(book.id) %>
  </td>
  <td>
   <%= book.body %>
  </td>

</tr>
<% end %>
</tbody>
</table>
</div>